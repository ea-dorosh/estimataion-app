{
    "version": 2,
    "builds": [
      {
        "src": "backend/index.js",
        "use": "@vercel/node"
      },
      {
        "src": "frontend/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "build"
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/backend/index.js",
        "headers": {
            "Access-Control-Allow-Origin": "*"
          }
      },
      {
        "src": "/(.*)",
        "dest": "/frontend/$1",
        "headers": {
            "Access-Control-Allow-Origin": "*"
          }
      }
    ]
  }
  